<%= simple_form_for @encounter do |f| %>
  <%= f.association :contact, collection: @contacts, label_method: :first_name, prompt: "Who?" %>
	<%= f.input :enc_type, collection: Encounter::TYPE, label: false, prompt: 'Select Encounter Method' %>
  <%= f.input :time_of, as: :date %>
  <%= f.input :time_of, as: :time, :ignore_date => true %>
	<%= f.input :duration, label: "Duration(minutes)", collection: (5..60).step(5) %>
	<%= f.submit %>
<% end %>
